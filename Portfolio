        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="js/scripts.js"></script>
        
       <script>
    // --- Existing Time and Word Game Scripts (Keep these as they were) ---

    function startTime() {
        document.getElementById('clock').innerHTML = new Date();
    }
    setInterval(startTime, 1000);
    
    const skillWords = ["python", "react", "kali", "html", "css", "arduino", "wireshark", "node", "fusion"];
    let chosenWord = "";
    let displayArray = [];
    let guessedLetters = [];

    function toggleWordGame() {
        const box = document.getElementById("wordGameBox");
        if (box.style.display === "none") {
            box.style.display = "block";
            startNewWordGame();
        } else {
            box.style.display = "none";
        }
    }
    
    function startNewWordGame() {
        guessedLetters = [];
        chosenWord = skillWords[Math.floor(Math.random() * skillWords.length)];
        displayArray = Array(chosenWord.length).fill("_");
        updateMaskedDisplay();
        document.getElementById("wordMessage").innerText = "";
        document.getElementById("letterInput").value = "";
        document.getElementById("newWordBtn").style.display = "none";
        document.getElementById("guessedLetters").innerText = "";
    }

    function updateMaskedDisplay() {
        document.getElementById("maskedWord").innerText = displayArray.join(" ");
    }

    function guessLetter() {
        const input = document.getElementById("letterInput");
        const letter = input.value.toLowerCase();
        input.value = "";

        if (!letter || guessedLetters.includes(letter) || letter.length !== 1 || !/[a-z]/.test(letter)) return;

        guessedLetters.push(letter);
        document.getElementById("guessedLetters").innerText = "Guessed: " + guessedLetters.join(", ").toUpperCase();

        let found = false;
        for (let i = 0; i < chosenWord.length; i++) {
            if (chosenWord[i] === letter) {
                displayArray[i] = letter;
                found = true;
            }
        }

        updateMaskedDisplay();

        if (displayArray.join("") === chosenWord) {
            document.getElementById("wordMessage").innerText = `üéâ You guessed it! The word was "${chosenWord.toUpperCase()}"`;
            document.getElementById("newWordBtn").style.display = "inline-block";
        } else if (!found) {
            document.getElementById("wordMessage").innerText = `‚ùå No "${letter.toUpperCase()}" in the word.`;
        } else {
            document.getElementById("wordMessage").innerText = `‚úÖ Good! "${letter.toUpperCase()}" is correct.`;
        }
    }


    // --- NEW CAT MASCOT ENHANCEMENTS AND STATE MANAGEMENT ---

    const catMessages = {
        'about': "Hi there! Welcome to my portfolio. Let's explore my journey!",
        'education': "Let's check out my academic background and degrees!",
        'experience': "Next, see where I've applied my skills as a Cyber Intern and Research Assistant.",
        'projects': "Now, coming to my projects! See how I build secure systems.",
        'skills': "This is my toolbox! Don't forget to play the word game above!",
        'certifications': "Finally, here are my certifications. Thanks for stopping by!"
    };

    const sections = document.querySelectorAll('section.resume-section');
    const speechBubble = document.getElementById('speech-bubble');
    const portfolioCat = document.getElementById('portfolio-cat');
    const catImage = portfolioCat.querySelector('img'); // Ensure this selects the <img> tag correctly
    const pawContainer = document.getElementById('paw-print-container'); // This container should be in your HTML body

    let lastSection = 'about';
    let lastScrollY = window.scrollY;
    let activityTimer;
    let scrollTimeout; // To detect end of scrolling
    const INACTIVITY_TIMEOUT_MS = 120000; // 2 minutes (120,000 milliseconds)
    const SCROLL_STOP_DELAY_MS = 150; // Delay to confirm scroll has stopped
    
    // Track current cat state to avoid unnecessary image swaps
    let currentCatState = 'idle'; // 'idle', 'moving', 'sleeping'

    // --- State Management Functions ---

    function setCatState(newState) {
        if (currentCatState === newState) return; // No change needed

        currentCatState = newState;
        switch (newState) {
            case 'idle':
                catImage.src = 'assets/img/cat-mascot.png';
                if (catImage.src.indexOf('sleeping') === -1) { // Only restore message if not currently sleeping
                    speechBubble.innerText = catMessages[lastSection];
                }
                break;
            case 'moving':
                catImage.src = 'assets/img/cat-mascot-moving.png';
                break;
            case 'sleeping':
                catImage.src = 'assets/img/cat-mascot-sleeping.png';
                speechBubble.innerText = "Zzz... Waiting for activity...";
                break;
        }
    }

    // --- Paw Prints ---

    function createPawPrint() {
        const paw = document.createElement('div');
        paw.classList.add('paw-print');
        paw.style.backgroundImage = 'url("assets/img/paw-print.png")'; 
        
        const catRect = catImage.getBoundingClientRect();
        const currentScrollY = window.scrollY;

        // Position on the left side of the cat, slightly below its center
        const pawLeft = catRect.left - 5; 
        const pawTop = catRect.bottom - (catRect.height * 0.4) + currentScrollY; // Adjust paw vertical position
        
        paw.style.left = `${pawLeft}px`;
        paw.style.top = `${pawTop}px`;
        
        // Add to the main body element (better for fixed positioning)
        document.body.appendChild(paw); 

        // Animate the opacity to make it fade out
        setTimeout(() => {
            paw.style.opacity = 0.5; // Make it visible briefly
            setTimeout(() => {
                paw.style.opacity = 0; // Start the fade out
            }, 50); 
            // Remove the element after the transition is complete (3000ms from CSS)
            setTimeout(() => {
                paw.remove();
            }, 3050);
        }, 10);
    }
    
    // --- Scroll Handling ---

    function handleScrollActivity() {
        resetActivityTimer(); // User is active
        
        const currentScrollY = window.scrollY;
        const scrollDifference = Math.abs(currentScrollY - lastScrollY);

        if (scrollDifference > 0) { // If there was actual vertical movement
            setCatState('moving');
            
            // Generate a paw print more frequently, but not on every single pixel scroll
            // Only create a paw print if scrolled more than 20px
                createPawPrint();
                lastScrollY = currentScrollY; // Reset last scroll for paw print interval
            
        } else {
            // If scrollDifference is 0, it means the scroll event fired but no actual movement.
            // This is where scrollTimeout comes in.
        }

        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(() => {
            if (currentCatState === 'moving') { // If it was moving, set to idle once scroll truly stops
                setCatState('idle');
            }
        }, SCROLL_STOP_DELAY_MS);

        updateCatMessage();
    }

    // --- Inactivity / Sleep Mode ---

    function resetActivityTimer() {
        clearTimeout(activityTimer);
        // If the cat was sleeping and user becomes active, wake it up
        if (currentCatState === 'sleeping') {
            setCatState('idle'); // Wakes up
            speechBubble.innerText = catMessages[lastSection]; // Restores greeting
        }
        activityTimer = setTimeout(putCatToSleep, INACTIVITY_TIMEOUT_MS);
    }

    function putCatToSleep() {
        setCatState('sleeping');
    }

    // --- Message Update Logic ---

    function findVisibleSection() {
        let currentSection = 'about';
        const scrollThreshold = 150; // Keep this consistent
        
        for (let i = sections.length - 1; i >= 0; i--) {
            const section = sections[i];
            const rect = section.getBoundingClientRect();
            
            if (rect.top <= scrollThreshold) {
                currentSection = section.id;
                break;
            }
        }
        return currentSection;
    }

    function updateCatMessage() {
        const currentSection = findVisibleSection();
        if (currentSection !== lastSection) {
            if (currentCatState !== 'sleeping') { // Only update if not sleeping
                const message = catMessages[currentSection] || "Cool! Keep scrolling to see more!";
                speechBubble.innerText = message;
            }
            lastSection = currentSection;
        }
    }

    // --- Initialization and Event Listeners ---

    // Listeners for general activity (resets the sleep timer)
    window.addEventListener('scroll', handleScrollActivity); // Combined scroll and activity
    window.addEventListener('mousemove', resetActivityTimer);
    window.addEventListener('keydown', resetActivityTimer);
    window.addEventListener('touchstart', resetActivityTimer); // For touch devices

    // Need to ensure paw-print-container exists in HTML, or dynamically create it
    if (!pawContainer) {
        const newPawContainer = document.createElement('div');
        newPawContainer.id = 'paw-print-container';
        document.body.appendChild(newPawContainer);
    }

    // Initial setup
    setCatState('idle'); // Start in idle state
    resetActivityTimer(); // Start the sleep timer immediately
    updateCatMessage(); // Set initial message
    lastScrollY = window.scrollY; // Initialize lastScrollY
</script>
    </body>
</html>
